[Unit]
Description = ResourceManager. The scheduler for YARN.
After = syslog.target network.target remote-fs.target

[Service]
User = <%= node.apache_hadoop.yarn.user %>

PIDFile = <%= node.apache_hadoop.logs_dir %>/yarn-<%= node.apache_hadoop.yarn.user %>-resourcemanager.pid
ExecStart = <%= node.apache_hadoop.home %>/sbin/start-rm.sh
ExecStop = <%= node.apache_hadoop.home %>/sbin/stop-rm.sh
ExecReload = <%= node.apache_hadoop.home %>/sbin/restart-nn.sh

Type = forking

[Install]
WantedBy = multi-user.target
