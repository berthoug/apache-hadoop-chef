[Unit]
Description = DataNode, blocks server for HDFS.
After = syslog.target network.target remote-fs.target

[Service]
User = <%= node.apache_hadoop.hdfs.user %>

PIDFile = <%= node[:hadoop][:logs_dir] %>/hadoop-<%= node[:hdfs][:user] %>-datanode.pid
ExecStart = <%= node[:hadoop][:home] %>/sbin/start-dn.sh
ExecStop = <%= node[:hadoop][:home] %>/sbin/stop-dn.sh
ExecReload = <%= node[:hadoop][:home] %>/sbin/restart-dn.sh

Type = forking

[Install]
WantedBy = multi-user.target
