[Unit]
Description = DataNode, blocks server for HDFS.
After = syslog.target network.target remote-fs.target

[Service]
User = <%= node.hdfs.user %>

PIDFile = <%= node.apache_hadoop.logs_dir %>/hadoop-<%= node.hdfs.user %>-datanode.pid
ExecStart = <%= node.apache_hadoop.home %>/sbin/start-dn.sh
ExecStop = <%= node.apache_hadoop.home %>/sbin/stop-dn.sh
ExecReload = <%= node.apache_hadoop.home %>/sbin/restart-dn.sh

Type = forking

[Install]
WantedBy = multi-user.target
